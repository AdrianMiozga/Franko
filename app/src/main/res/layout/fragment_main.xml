<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/show_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_map"
        app:layout_constraintBottom_toTopOf="@id/show_activities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/show_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_activities"
        app:layout_constraintBottom_toTopOf="@id/show_statistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_map" />

    <Button
        android:id="@+id/show_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_statistics"
        app:layout_constraintBottom_toBottomOf="@id/show_achievements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_activities" />

    <Button
        android:id="@+id/show_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_achievements"
        app:layout_constraintBottom_toBottomOf="@id/show_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_statistics" />

    <Button
        android:id="@+id/show_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_options"
        app:layout_constraintBottom_toTopOf="@id/show_people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_achievements" />

    <Button
        android:id="@+id/show_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_people"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_options" />

</androidx.constraintlayout.widget.ConstraintLayout>
