<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="org.wentura.physicalapplication.MainFragment"
        android:label="Main Activity"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/navigate_to_map_fragment"
            app:destination="@id/map_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/navigate_to_activities_fragment"
            app:destination="@id/activities_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/navigate_to_statistics_fragment"
            app:destination="@id/statistics_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/navigate_to_settings_fragment"
            app:destination="@id/settings_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/navigate_to_people_fragment"
            app:destination="@id/people_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/map_fragment"
        android:name="org.wentura.physicalapplication.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/navigate_to_main_fragment"
            app:destination="@id/main_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/activities_fragment"
        android:name="org.wentura.physicalapplication.activities.ActivitiesFragment"
        tools:layout="@layout/fragment_activities"
        android:label="Activities">

        <action
            android:id="@+id/action_activities_fragment_to_first_fragment"
            app:destination="@id/main_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/statistics_fragment"
        android:name="org.wentura.physicalapplication.statistics.StatisticsFragment"
        tools:layout="@layout/fragment_statistics"
        android:label="Statistics">

        <action
            android:id="@+id/action_statisticsFragment_to_first_fragment"
            app:destination="@id/main_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="org.wentura.physicalapplication.settings.SettingsFragment"
        android:label="Settings">

        <action
            android:id="@+id/action_settingsFragment_to_first_fragment"
            app:destination="@id/main_fragment" />
    </fragment>

    <fragment
        android:id="@+id/people_fragment"
        android:name="org.wentura.physicalapplication.people.PeopleFragment"
        android:label="People"
        tools:layout="@layout/fragment_people">

        <action
            android:id="@+id/action_peopleFragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>

</navigation>