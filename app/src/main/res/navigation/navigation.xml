<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="org.wentura.franko.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/to_map_fragment"
            app:destination="@id/map_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_activities_fragment"
            app:destination="@id/activities_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_statistics_fragment"
            app:destination="@id/statistics_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_settings_fragment"
            app:destination="@id/settings_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_people_fragment"
            app:destination="@id/people_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_achievements_fragment"
            app:destination="@id/achievements_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_profile_edit_fragment"
            app:destination="@id/profile_edit_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/map_fragment"
        android:name="org.wentura.franko.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/activities_fragment"
        android:name="org.wentura.franko.activities.ActivitiesFragment"
        android:label="Activities"
        tools:layout="@layout/fragment_activities">

        <action
            android:id="@+id/to_activity_fragment"
            app:destination="@id/activity_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/statistics_fragment"
        android:name="org.wentura.franko.statistics.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="org.wentura.franko.settings.SettingsFragment"
        android:label="Settings">

    </fragment>

    <fragment
        android:id="@+id/people_fragment"
        android:name="org.wentura.franko.people.PeopleFragment"
        android:label="People"
        tools:layout="@layout/fragment_people">

        <action
            android:id="@+id/to_profile_fragment"
            app:destination="@id/profile_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="org.wentura.franko.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <argument
            android:name="uid"
            app:argType="string" />

        <action
            android:id="@+id/to_following_fragment"
            app:destination="@id/following" />

    </fragment>

    <fragment
        android:id="@+id/achievements_fragment"
        android:name="org.wentura.franko.achievements.AchievementsFragment"
        android:label="Achievements"
        tools:layout="@layout/fragment_achievements" />

    <fragment
        android:id="@+id/profile_edit_fragment"
        android:name="org.wentura.franko.profileedit.ProfileEditFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_profile_edit" />

    <fragment
        android:id="@+id/activity_fragment"
        android:name="org.wentura.franko.activity.ActivityFragment"
        android:label="Activity"
        tools:layout="@layout/fragment_activity">

        <argument
            android:name="id"
            app:argType="string" />

        <action
            android:id="@+id/to_activity_edit_fragment"
            app:destination="@id/activity_edit_fragment" />

    </fragment>

    <fragment
        android:id="@+id/activity_edit_fragment"
        android:name="org.wentura.franko.activityedit.ActivityEditFragment"
        android:label="Edit Activity"
        tools:layout="@layout/fragment_activity_edit">

        <argument
            android:name="id"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/following"
        android:name="org.wentura.franko.following.FollowingFragment"
        android:label="Following"
        tools:layout="@layout/fragment_following">

        <action
            android:id="@+id/to_profile_fragment"
            app:destination="@id/profile_fragment" />

        <argument
            android:name="uid"
            app:argType="string" />

    </fragment>

</navigation>
