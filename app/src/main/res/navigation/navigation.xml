<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/first_fragment">

    <fragment
        android:id="@+id/first_fragment"
        android:name="org.wentura.physicalapplication.FirstFragment"
        android:label="Main Activity"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/navigate_to_map_fragment"
            app:destination="@id/map_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/navigate_to_activities_fragment"
            app:destination="@id/activities_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/map_fragment"
        android:name="org.wentura.physicalapplication.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/navigate_to_first_fragment"
            app:destination="@id/first_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/activities_fragment"
        android:name="org.wentura.physicalapplication.ActivitiesFragment"
        tools:layout="@layout/fragment_activities"
        android:label="Activities">
        <action
            android:id="@+id/action_activities_fragment_to_first_fragment"
            app:destination="@id/first_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>