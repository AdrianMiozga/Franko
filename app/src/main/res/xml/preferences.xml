<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <SwitchPreferenceCompat
            app:key="darkMode"
            app:title="@string/dark_mode" />

        <SwitchPreferenceCompat
            app:key="miles"
            app:title="@string/display_miles_per_hour" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/privacy">

        <ListPreference
            app:entries="@array/who_can_see_my_profile"
            app:entryValues="@array/who_can_see_my_profile"
            app:key="whoCanSeeMyProfile"
            app:useSimpleSummaryProvider="true"
            app:title="@string/who_can_see_my_profile" />

        <ListPreference
            app:entries="@array/who_can_see_my_location"
            app:entryValues="@array/who_can_see_my_location"
            app:key="whoCanSeeMyLocation"
            app:useSimpleSummaryProvider="true"
            app:title="@string/who_can_see_my_location" />

    </PreferenceCategory>

</PreferenceScreen>
